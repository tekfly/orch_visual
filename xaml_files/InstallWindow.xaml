<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install UiPath Components" WindowStartupLocation="CenterScreen" Height="820" Width="1024">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter checkboxes spanning two columns -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2" Grid.Row="0">
            <TextBlock Text="Filter by file type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <CheckBox Name="ChkMsi" Content=".msi" IsChecked="True" Margin="0,0,10,0"/>
            <CheckBox Name="ChkExe" Content=".exe" IsChecked="True" Margin="0,0,10,0"/>
            <CheckBox Name="ChkPs1" Content=".ps1" IsChecked="True"/>
        </StackPanel>

        <!-- Files ListBox in column 0, row 1 -->
        <ListBox Name="FilesListBox" Grid.Row="1" Grid.Column="0" SelectionMode="Single" Margin="0" />

        <!-- Buttons in row 2 -->
        <Button Name="InstallBtn" Grid.Row="2" Grid.Column="0" Content="Install Selected" Height="30" Margin="0,10,10,0" HorizontalAlignment="Right" Width="140"/>
        <Button Name="CancelBtn" Grid.Row="2" Grid.Column="1" Content="Cancel" Height="30" Margin="10,10,0,0" HorizontalAlignment="Left" Width="120"/>
    </Grid>
</Window>
