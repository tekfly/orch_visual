<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installing..." Height="150" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="InstallStatusText" FontSize="16" Margin="10" TextAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="250" Height="20" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
